<div class="list-groups">
  <table class="table-cv list-group-table">
    <!-- Display category headers in a single row -->
    <thead>
      <tr>
        {% for content in entry.contents %}
          <th class="list-group-category">{{ content.category }}</th>
        {% endfor %}
      </tr>
    </thead>
    <tbody>
      <!-- Calculate the maximum number of rows needed -->
      {% assign max_items = 0 %}
      {% for content in entry.contents %}
        {% if content.items.size > max_items %}
          {% assign max_items = content.items.size %}
        {% endif %}
      {% endfor %}

      <!-- Display items row by row -->
      {% for row in (0..max_items-1) %}
        <tr>
          {% for content in entry.contents %}
            <td>
              <td></td>
              {% if content.items[row] %}
                {{ content.items[row] }}
              {% endif %}
            </td>
          {% endfor %}
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
